{
  "name": "restaurant-management-smarudhi",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "electron .",
    "build:react": "tsc -b && vite build",
    "lint": "eslint .",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dist:mac": "pnpm transpile:electron && pnpm build:react && electron-builder --mac --arm64",
    "dist:win": "pnpm transpile:electron && pnpm build:react && electron-builder --win --x64",
    "dist:linux": "pnpm transpile:electron && pnpm build:react && electron-builder --linux --x64"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.0.3"
  }
}
